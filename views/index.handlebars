<h1 class="text-center">Burger Time</h1>
<hr>
<div class="row">
<div class="col-md-6">
  <h2>Uneaten Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
     <p class="burger">{{this.id}}. {{this.burger_name}}</p>
      <button type="submit" class="eatburger" data-id={{this.id}}>Eat</button>
    {{/unless}}
      
    {{/each}}
  </ul>
</div>
<div class="col-md-6">
  <h2>Eaten Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
      <p class="burger">{{this.id}}. {{this.burger_name}}</p>
      <button type="submit" class="deleteburger" data-id={{this.id}}>Delete</button>
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
<hr>
<div class="row">
    <div class="col-md-9">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
    </div>

    <div class="col-md-3"><img src="/assets/images/burger.png" class="burger-img"></div>
</div>
